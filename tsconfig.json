{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop":true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "Components/*": ["./src/Components/*"],
      "styles/*": ["./src/styles/*"]
    },
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./types",
    "typeRoots": ["./types", "./node_modules/@types"],
  },
  "exclude": [
    "node_modules",
    "webpack.config.js"
  ],
}
